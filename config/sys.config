[
    {userdb, [
        {session_ttl, 30000} %msec, 1..3600000
    ]},
    {mysql, [
        {user, "userdb"},
        {password, "userdb"},
        {host, "localhost"},
        {database, "userdb"},
        {connect_mode, lazy},
        {keep_alive, true}
    ]},
    {lager, [
        {log_root, "/tmp"},
        %% Default handlers for lager/lager_event
        {handlers, [
            {lager_console_backend, [
                {level, debug},
                {formatter, lager_default_formatter},
                {formatter_config, [date," ",time," ",severity," ",pid," [",module,":",line,"]: ",message,"\n"]}
            ]},
            {lager_file_backend, [
                {file, "error.log"},
                {level, error},
                {formatter, lager_default_formatter},
                {formatter_config, [date," ",time," ",severity," ",pid," [",module,":",line,"]: ",message,"\n"]}
            ]},
            {lager_file_backend, [
                {file, "console.log"},
                {level, info},
                {formatter, lager_default_formatter},
                {formatter_config, [date," ",time," ",severity," ",pid," [",module,":",line,"]: ",message,"\n"]}
            ]}
         ]}
    ]},
    {async, [
        %% default state for pause after start async
        {pause, false},
        %% interval between processed changes files
        {collect_interval, 200},
        %% include in code path for successful compile
        {include_path, "../*"},
        {exclude_path_regexp, [ "/usr/lib/erlang/lib/*" ]},
        %% optional
        {load, {cmd, "notify-send"}},
        {error, {cmd, "notify-send"}}
    ]}
].

